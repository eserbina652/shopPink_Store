{
  "env": {
    "browser": true,//робота в межах браузера
    "es6": true, //підтримка es6
    "node": true //підтримка ноди в глобальних змінних
  },
  "extends": [
    "react-app",
    "react-app/jest"
  ]
,
   "rules": {
     "semi": "error", //крапка із комою буде сприйматися як помилка
     "no-plusplus": "error",
     "eol-last": "off",
     "max-len": ["off"],//максимальна довжина
     //строки не включаючи URL адрессу
     "no-tabs": "error",
     "comma-dangle": "off",//кома на кінці елементів об'єктів
     "prefer-destructuring": "error",
     "indent": "off", // кількість відступів
     "no-param-reassign": "error"//перевизначення змінних
   }
}
